<h1>Shopping Cart</h1>

<% if @cart.empty? %>
  <p>Your cart is empty!</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <% quantity = @cart[product.id.to_s] %>
        <tr>
          <td><%= product.product_name %></td>
          <td>
            <%= form_with url: update_cart_path, method: :patch, local: true do |f| %>
              <%= hidden_field_tag :product_id, product.id %>
              <%= number_field_tag :quantity, quantity, min: 1, class: "quantity-field" %>
              <%= f.submit "Update", class: "button" %>
            <% end %>
          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * quantity) %></td>
          <td>
            <%= button_to "Remove", remove_from_cart_path(product_id: product.id), method: :delete, class: "button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>Subtotal: <%= number_to_currency(@products.sum { |product| product.price * @cart[product.id.to_s] }) %></p>

  <div class="checkout-section">
    <%= link_to "Proceed to Checkout", new_checkout_path, class: "button checkout-button" %>
  </div>
<% end %>

<%= link_to "Continue Shopping", products_path, class: "button" %>

<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
  }
  th, td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: left;
  }
  th {
    background-color: #f4f4f4;
  }
  .button {
    padding: 8px 15px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
  }
  .button:hover {
    background-color: #0056b3;
  }
  .quantity-field {
    width: 50px;
  }
  .checkout-section {
    margin-top: 20px;
    text-align: right;
  }
  .checkout-button {
    background-color: #28a745;
  }
  .checkout-button:hover {
    background-color: #218838;
  }
</style>
