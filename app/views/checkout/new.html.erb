<h1>Checkout</h1>

<h2>Cart Summary</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item[:product].product_name %></td>
        <td><%= item[:quantity] %></td>
        <td><%= number_to_currency(item[:subtotal]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Tax Breakdown</h2>
<table>
  <thead>
    <tr>
      <th>Tax Type</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>GST</td>
      <td><%= number_to_currency(@gst) %></td>
    </tr>
    <tr>
      <td>PST</td>
      <td><%= number_to_currency(@pst) %></td>
    </tr>
    <tr>
      <td>HST</td>
      <td><%= number_to_currency(@hst) %></td>
    </tr>
  </tbody>
</table>

<p><strong>Subtotal:</strong> <%= number_to_currency(@subtotal) %></p>
<p><strong>Total Taxes:</strong> <%= number_to_currency(@total_taxes) %></p>
<p><strong>Grand Total:</strong> <%= number_to_currency(@total) %></p>

<%= button_to "Confirm and Place Order", checkout_index_path, method: :post, class: "button" %>

<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }
  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }
  th {
    background-color: #f4f4f4;
  }
  .button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    display: inline-block;
    font-weight: bold;
  }
  .button:hover {
    background-color: #0056b3;
  }
</style>
